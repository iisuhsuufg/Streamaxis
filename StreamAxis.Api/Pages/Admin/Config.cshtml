@page
@model StreamAxis.Api.Pages.Admin.ConfigModel
@{
    ViewData["Title"] = "App Settings";
    Layout = "_AdminLayout";
}

<div class="page-header">
    <h1>App Settings</h1>
</div>

@if (Model.Message != null)
{
    <div class="alert alert-success">@Model.Message</div>
}

<div class="card">
    <div class="card-header">
        <h3>Version Configuration</h3>
    </div>
    <div class="card-body">
        <form method="post" asp-page-handler="Save">
            <div class="form-inline" style="margin-bottom: 20px;">
                <div class="form-group">
                    <label>Current App Version</label>
                    <input type="text" name="currentVersion" value="@Model.CurrentVersion" placeholder="e.g., 1.0.0" />
                </div>
                <div class="form-group">
                    <label>Latest APK URL</label>
                    <input type="url" name="latestApkUrl" value="@Model.LatestApkUrl" placeholder="https://..." style="min-width: 350px;" />
                </div>
            </div>
            <div class="form-inline" style="margin-bottom: 20px;">
                <div class="form-group">
                    <label>Update Message</label>
                    <textarea name="updateMessage" rows="3" style="min-width: 400px; resize: vertical;">@Model.UpdateMessage</textarea>
                </div>
            </div>
            <div style="display: flex; align-items: center; gap: 16px; margin-bottom: 20px;">
                <label style="display: flex; align-items: center; gap: 8px; cursor: pointer; color: var(--text-secondary);">
                    @if (Model.IsUpdateRequired)
                    {
                        <input type="checkbox" name="isUpdateRequired" value="true" checked style="width: auto; min-width: auto;" />
                    }
                    else
                    {
                        <input type="checkbox" name="isUpdateRequired" value="true" style="width: auto; min-width: auto;" />
                    }
                    Force Update (users must update to continue)
                </label>
            </div>
            <button type="submit" class="btn btn-primary">Save Settings</button>
        </form>
    </div>
</div>

<div class="card">
    <div class="card-header">
        <h3>Upload APK</h3>
    </div>
    <div class="card-body">
        <p style="color: var(--text-secondary); margin-bottom: 16px;">
            Upload a new APK file to make it available for download. The URL will be automatically set.
        </p>
        <form method="post" asp-page-handler="Upload" enctype="multipart/form-data" class="form-inline">
            <div class="form-group">
                <label>APK File</label>
                <input type="file" name="file" accept=".apk" style="padding: 10px;" />
            </div>
            <button type="submit" class="btn btn-secondary">Upload APK</button>
        </form>
    </div>
</div>
